            app:layout_constraintTop_toBottomOf="@id/Tab_Lay_D16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">
        </TextView>

        //Space for Signature
        <TableLayout
            android:id="@+id/Tab_Lay_D17"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:layout_constraintTop_toBottomOf="@id/disclaimer"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:id="@+id/signature_1"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_weight="1"
                    android:layout_margin="5dp"
                    android:background="@color/white"/>

            </TableRow>

        </TableLayout>

        <TextView
            android:id="@+id/Sign_remind"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:text="(請 輕 觸 空 白 位 置 簽 署)"
            android:textColor="@color/black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Tab_Lay_D17"/>

        //End of Signature Pad

        <RelativeLayout
            android:id="@+id/RelativeLay_D2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:stretchColumns="0"
            app:layout_constraintTop_toBottomOf="@id/Sign_remind"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <Button
                android:id="@+id/ButtonUp_5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="上一步"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true">
            </Button>

            <Button
                android:id="@+id/ButtonNext_6"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="下一步"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:layout_alignParentRight="true">
            </Button>

        </RelativeLayout>

        <TableLayout
            android:id="@+id/Tab_Lay_Empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/RelativeLay_D2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:weightSum="1">

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="    \n     \n    \n    \n    \n    \n    \n    \n    \n">
                </TextView>

            </TableRow>

        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


